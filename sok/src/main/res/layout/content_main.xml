<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="no.mbs.sok.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <SearchView
        android:id="@+id/sok"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/sokresultat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sokresultat"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gaupen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gaupen"
        app:layout_constraintBottom_toBottomOf="@+id/sok"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/brenderup"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/brenderup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brenderup"
        app:layout_constraintBottom_toBottomOf="@+id/sok"
        app:layout_constraintLeft_toLeftOf="@+id/gaupen"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
